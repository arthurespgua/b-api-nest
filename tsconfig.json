{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@prisma/*": ["prisma/*"],
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@config": ["src/config"],
      "@middlewares/*": ["src/middlewares/*"],
      "@pipes/*": ["src/pipes/*"],
      "@shared/*": ["src/shared/*"],
      "@public/*": ["public/*"],

      // ByModule
      "@users/*": ["src/app/users/*"],
      "@tasks/*": ["src/app/tasks/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
